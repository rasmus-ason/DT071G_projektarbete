<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlagQuiz.Pages.ManageResultPage"
             Title="ManageResultPage">
    
    <VerticalStackLayout
        BackgroundColor="Black"
        >

        <Label 
            Text="Result"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Padding="60"
            FontSize="30"
            TextColor="IndianRed"
            />


        <Label 
            x:Name="DisplayResultToUser"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Padding="60"
            FontSize="16"
            TextColor="White"
            />


        <Button
            Text="Do the quiz again!"
            Clicked="OnClickedToQuizPage"
            Margin="30"
            BackgroundColor="IndianRed"
            WidthRequest="230"
            TextColor="White"
        />


        <Button
            Text="Back to home!"
            Clicked="ToStartPage"
            Margin="30"
            BackgroundColor="IndianRed"
            WidthRequest="230"
            TextColor="White"
        />



    </VerticalStackLayout>
</ContentPage>