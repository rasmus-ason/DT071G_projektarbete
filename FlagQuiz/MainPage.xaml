<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlagQuiz.MainPage"
             Title="The Big Flag Quiz"
             >


    <VerticalStackLayout>
             
        <Label 
            Text="Flag quiz game!"
            Padding="30"
            FontSize="32"
            TextColor="IndianRed"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Image  Source="homepageimage.png"
                Grid.Column="0"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Margin="10"
                WidthRequest="300"
                HeightRequest="300"
                VerticalOptions="Center"></Image>



        <Button
            Text="Let's get started!"
            Clicked="OnClickedToQuizPage"
            Margin="30"
            BackgroundColor="IndianRed"
            WidthRequest="230"
            
        />
      


    </VerticalStackLayout>




</ContentPage>
